<?xml version="1.0" encoding="utf-8"?>
<!--创建一个地图-->

<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="100%" height="100%">
	
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	
	<s:Rect width="100%" height="100%">
		<s:fill>
			<mx:SolidColor color="0" alpha="0.3"/>
		</s:fill>
	</s:Rect>
	
<s:Panel title="新建地图" horizontalCenter="0" verticalCenter="0" width="400" height="300">
	
	<s:Form width="100%" height="100%">
		<s:FormHeading width="100%" label="指定一张背景:"/>
		<s:FormItem width="100%">
			<s:HGroup width="100%" horizontalAlign="left">
				<s:TextInput id="txtMapPath" prompt="背景地图地址" editable="false" text="E:\SLG_Game2\BZMapEditor\art\worldMapV2.jpg"/>
				<s:Button label="浏览" id="btnMapbrowser"/>
			</s:HGroup>
		</s:FormItem>
		
		<s:FormHeading width="100%" label="指定一个城市图片文件夹:"/>
		<s:FormItem width="100%">
			<s:HGroup width="100%">
				<s:TextInput id="txtCityIconPat" prompt="指定一个文件夹" editable="false" text="E:\SLG_Game2\BZMapEditor\art\MapCity"/>
				<s:Button label="浏览" id="btnNodesbrowser"/>
			</s:HGroup>
		</s:FormItem>
	</s:Form>
	
	<s:HGroup width="180" height="30" bottom="0" horizontalAlign="center" horizontalCenter="0">
		<s:Button id="btnOk" label="确定"/>
		<s:Button id="btnCancel" label="取消"/>
	</s:HGroup>
</s:Panel>
</s:Group>
